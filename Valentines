<script>
const question = document.getElementById("question");
const yesBtn = document.getElementById("yes");
const noBtn = document.getElementById("no");
const body = document.body;

let yesScale = 1;
let index = 0;
const text = "Piyush, will you be my Valentine? ðŸ’–";

// Typing animation
function type() {
    if(index < text.length){
        question.innerHTML += text.charAt(index);
        index++;
        setTimeout(type, 50);
    }
}
type();

// Yes grows
setInterval(()=>{
    yesScale += 0.07;
    yesBtn.style.transform = `scale(${yesScale})`;
},1000);

// No runs away
document.addEventListener("mousemove",(e)=>{
    const rect = noBtn.getBoundingClientRect();
    const dx = e.clientX - (rect.left+rect.width/2);
    const dy = e.clientY - (rect.top+rect.height/2);
    if(Math.sqrt(dx*dx+dy*dy)<120){
        noBtn.style.left = Math.random()*(window.innerWidth-100)+"px";
        noBtn.style.top = Math.random()*(window.innerHeight-50)+"px";
    }
});

// If No clicked
noBtn.addEventListener("click",()=>{
    body.classList.add("shake");
    setTimeout(()=>body.classList.remove("shake"),400);
    question.innerHTML="Piyush ðŸ˜­ðŸ’” pleaseee ðŸ¥ºðŸ’–<br>Will you be my Valentine? ðŸ’˜";
    yesScale+=0.5;
});

// Floating hearts
function createHeart(){
    const heart=document.createElement("div");
    heart.classList.add("heart");
    heart.innerHTML="ðŸ’—";
    heart.style.left=Math.random()*100+"vw";
    heart.style.fontSize=(Math.random()*20+20)+"px";
    document.body.appendChild(heart);
    setTimeout(()=>heart.remove(),6000);
}
setInterval(createHeart,300);

// 3D particle background
const bgCanvas=document.getElementById("bg3d");
const bgCtx=bgCanvas.getContext("2d");
bgCanvas.width=window.innerWidth;
bgCanvas.height=window.innerHeight;

let particles=Array.from({length:100},()=>({
    x:Math.random()*bgCanvas.width,
    y:Math.random()*bgCanvas.height,
    z:Math.random()*bgCanvas.width
}));

function draw3D(){
    bgCtx.clearRect(0,0,bgCanvas.width,bgCanvas.height);
    particles.forEach(p=>{
        p.z-=2;
        if(p.z<=0) p.z=bgCanvas.width;
        let k=128/p.z;
        let px=p.x*k+bgCanvas.width/2;
        let py=p.y*k+bgCanvas.height/2;
        bgCtx.fillStyle="rgba(255,255,255,0.7)";
        bgCtx.fillRect(px,py,2,2);
    });
    requestAnimationFrame(draw3D);
}
draw3D();

// Fireworks on Yes
yesBtn.addEventListener("click",()=>{
    startFireworks();
    setTimeout(()=>{
        body.innerHTML=`
        <div style="display:flex;justify-content:center;align-items:center;height:100vh;background:linear-gradient(135deg,#ff2e63,#ff8fa3);color:white;text-align:center;">
        <h1 style="font-size:3rem;">YAYYYY PIYUSH!!! ðŸ’•ðŸŽ†ðŸ’–<br>You said YES!!! ðŸ¥°</h1>
        </div>`;
    },2000);
});

function startFireworks(){
const canvas=document.getElementById("fireworks");
const ctx=canvas.getContext("2d");
canvas.width=window.innerWidth;
canvas.height=window.innerHeight;

let fireworks=[];
for(let i=0;i<200;i++){
fireworks.push({
x:canvas.width/2,
y:canvas.height/2,
angle:Math.random()*2*Math.PI,
speed:Math.random()*5+2,
radius:Math.random()*3+2
});
}

function animate(){
ctx.clearRect(0,0,canvas.width,canvas.height);
fireworks.forEach(f=>{
f.x+=Math.cos(f.angle)*f.speed;
f.y+=Math.sin(f.angle)*f.speed;
ctx.beginPath();
ctx.arc(f.x,f.y,f.radius,0,2*Math.PI);
ctx.fillStyle="white";
ctx.fill();
});
requestAnimationFrame(animate);
}
animate();
}
</script>

</body>
